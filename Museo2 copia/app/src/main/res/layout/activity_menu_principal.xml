<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPrincipal">

    <TextView
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="136dp"
        android:text="email"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="136dp"
        android:text="Bienvenido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonQR"
        android:layout_centerVertical="false"
        android:layout_height="108dp"
        android:layout_marginTop="28dp"
        android:layout_width="208dp"
        android:text="QR"
        android:textSize="15sp"
        app:icon="@drawable/ic_qr"
        app:iconSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombre" />

    <Button
        android:id="@+id/botonTours"
        android:layout_below="@id/botonQR"
        android:layout_height="108dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:layout_width="170dp"
        android:text="Tours"
        android:textSize="15sp"
        app:icon="@drawable/ic_tour"
        app:iconSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonQR" />

    <Button
        android:id="@+id/botonCategorias"
        android:layout_below="@id/botonQR"
        android:layout_height="108dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="64dp"
        android:layout_width="170dp"
        android:text="Categorias articulos"
        android:textSize="15sp"
        app:icon="@drawable/ic_baseline_manage_search_24"
        app:iconSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonQR" />

</androidx.constraintlayout.widget.ConstraintLayout>

